{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run Java",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "javac ${file} && java -cp ${workspaceFolder} arrays.faqMedium.${fileBasenameNoExtension} < input.txt > output.txt && rm ${fileDirname}/*.class"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*\\.java):(\\d+):\\s+(error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ]
  }